{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/types"],
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "types",
    "storybook-static",
    "node_modules",
    "src/tests",
    "src/**/*.test.ts",
    "src/**/*.test-utils.ts",
    "src/**/*.test-utils.tsx",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
    "src/storybook.tsx",
    "setupTests.ts",
    "vitest.config.ts"
  ]
}
